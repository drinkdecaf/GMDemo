            <string>/* Movement */

MySpeed = 10
MySprite = "still" //standing or walking sprite
MyAngle = 0 //player angle
AngleGoal = 0 //player intended angle, based off of movement
KeysPressed = 0 //how many directional keys being pressed

if keyboard_check(ord('W')) {
    y = y - MySpeed
    MySprite = "walk"
    AngleGoal += 90
    KeysPressed += 1
}
if keyboard_check(ord('S')) {
    y = y + MySpeed
    MySprite = "walk"
    AngleGoal += 270
    KeysPressed += 1    
}
if keyboard_check(ord('A')) {
    x = x - MySpeed
    MySprite = "walk"
    AngleGoal += 180
    KeysPressed += 1    
}
if keyboard_check(ord('D')) {
    x = x + MySpeed
    MySprite = "walk"
    if keyboard_check(ord('W')) {
        AngleGoal += 0
    } else {
        AngleGoal += 360
    }
    KeysPressed += 1
}



if MySprite == "still" {
    sprite_index = sPlayer
} else {
    sprite_index = sPlayerWalk
    audio_play_sound(dRun, 1, false)
}


/* Facing */

if KeysPressed &gt; 0 and KeysPressed &lt;= 2 {
    AngleGoal = AngleGoal / KeysPressed
    image_angle -= angle_difference(image_angle, AngleGoal) / 3 
}

//gun moves with player
MyGun.x = x
MyGun.y = y
MyGun.image_angle = point_direction(x,y,mouse_x,mouse_y)

/* Firing */

if mouse_check_button(mb_left) {
    audio_play_sound(dShoot, 1, false)

    MyBullet = instance_create(x,y,oBullet)
    
    BulletOffset = random_range(-5, 5)
    
    MyBullet.direction = MyGun.image_angle + BulletOffset
    MyBullet.speed = 20
    MyBullet.image_angle = MyGun.image_angle + BulletOffset
    
}
</string>
