            <string>/* Movement */

// reset movement variables
MySpeed = 340 / room_speed
MySprite = "still" //which sprite is used to show player
AngleGoal = 0 //player intended angle, based off of movement
KeysPressed = 0 //how many directional keys being pressed

if keyboard_check(ord('W')) and y &gt; 0 {
    y = y - MySpeed
    MySprite = "walk"
    AngleGoal += 90
    KeysPressed += 1
}
if keyboard_check(ord('S')) and y &lt; room_height {
    y = y + MySpeed
    MySprite = "walk"
    AngleGoal += 270
    KeysPressed += 1    
}
if keyboard_check(ord('A')) and x &gt; 0 {
    x = x - MySpeed
    MySprite = "walk"
    AngleGoal += 180
    KeysPressed += 1    
}
if keyboard_check(ord('D')) and x &lt; room_width {
    x = x + MySpeed
    MySprite = "walk"
    
    // a little weird, but keeps maths simpler later...
    if keyboard_check(ord('W')) {
        AngleGoal += 0
    } else {
        AngleGoal += 360
    }
    KeysPressed += 1
}


// swap out walking or standing sprite
if MySprite == "still" {
    sprite_index = sPlayer
    audio_stop_sound(aRun)
} else {
    sprite_index = sPlayerWalk
    if !audio_is_playing(aRun) { audio_play_sound(aRun, 1, true) }
}


/* Player Facing */

if KeysPressed &gt; 0 and KeysPressed &lt;= 2 {
    AngleGoal = AngleGoal / KeysPressed
    image_angle -= angle_difference(image_angle, AngleGoal) / 3 
}


/* Firing */

if mouse_check_button(mb_left) {
    audio_play_sound(aShoot, 1, false)

    MyBullet = instance_create(x,y,oBullet)
    
    BulletOffset = random_range(-5, 5)
    
    MyBullet.direction = MyGun.image_angle + BulletOffset
    MyBullet.speed = 900 / room_speed
    MyBullet.image_angle = MyGun.image_angle + BulletOffset
    MyBullet.image_blend = BulletColor
    MyBullet.MyColor = BulletColor
    
    
    //Kickback
    Kick = 3
    KickDirection = MyGun.image_angle + 180
    
    x += lengthdir_x(Kick, KickDirection)
    y += lengthdir_y(Kick, KickDirection)
    
}


/* Children Objects */

//gun moves with player
MyGun.x = x
MyGun.y = y
MyGun.image_angle = point_direction(x,y,mouse_x,mouse_y)
MyGun.direction = direction
MyGun.speed = speed
MyGun.image_blend = BulletColor

//so does shadow
MyShadow.x = x
MyShadow.y = y
MyShadow.direction = direction
MyShadow.speed = speed

/* Keep in-bounds */

if x &lt; 0 { x = 0 }
if y &lt; 0 { y = 0 }
if x &gt; room_width { x = room_width }
if y &gt; room_height { y = room_height }


/* Getting Hit */

IncomingEnemy = instance_place(x,y,oEnemy)

if instance_exists(IncomingEnemy) {
    //splat!
    for (i = 0; i &lt; 10; i++) {
        NewSplat = instance_create(x + random(40) - 20, y + random(40) - 20, oSplat)
        NewSplat.image_blend = make_colour_rgb(5,5,5)
        NewSplat.image_xscale = random(1) + .25
        NewSplat.image_yscale = NewSplat.image_xscale
        NewSplat.image_angle = random(360)
        NewSplat.direction = random(360)
        NewSplat.speed = random(MySpeed)
    }
    oGame.GameOver = true;
}


</string>
