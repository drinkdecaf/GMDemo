            <string>/* Child objects follow Enemy */

//shadow
if (instance_exists(MyShadow)) {
    MyShadow.x = x
    MyShadow.y = y
    MyShadow.image_angle = image_angle
    MyShadow.image_xscale = image_xscale * 1.2
    MyShadow.image_yscale = image_yscale * 1.2
    MyShadow.direction = direction
    MyShadow.speed = speed
}


/* Slime */

if (random(50) &lt; 15) {
    NewSplat = instance_create(x, y, oSplat)
    NewSplat.image_blend = MyColor
    NewSplat.image_xscale = random(image_xscale * 0.6)
    NewSplat.image_yscale = NewSplat.image_xscale
    NewSplat.speed = random(speed * 0.6)
    NewSplat.direction = random(360)
}

/* Facing */
SpinSpeed = 16

if image_xscale &gt; 1 { SpinSpeed = SpinSpeed / image_xscale }

image_angle += SpinSpeed

/* Bouncing */

if y &lt; 0 or y &gt; room_height {
    vspeed = vspeed * - 1
}

if x &lt; 0 or x &gt; room_width {
    hspeed = hspeed * - 1
}

/* Randomly Grow */
if distance_to_object(oPlayer) &gt; 100 &amp;&amp; random(1000) &lt; 5 and image_xscale &lt; 4 {
    image_xscale += 0.2
    image_yscale = image_xscale
    if speed &gt; (90 / room_speed) {
        speed -= (room_speed / 120)
    }
}

/* Damage */

IncomingBullet = instance_place(x,y,oBullet)

if instance_exists(IncomingBullet) {

    BulletColor = IncomingBullet.MyColor    

    //Destroy the bullet
    with IncomingBullet {
        instance_destroy()
    }
    
    audio_play_sound(aHit, 1, false)
    
    if (BulletColor == MyColor) {
        //Grow ourselves
        if (image_xscale &lt; 4) {
            image_xscale = image_xscale + 0.2
            image_yscale = image_xscale
        } else {
            SplitIntoTwo();
        }
          
    } else {
        //Shrink ourselves
        image_xscale = image_xscale - 0.2
        image_yscale = image_xscale
        
        if speed &lt; (390 / room_speed) {
            speed += 30 / room_speed
        }
    }
        
    //Destroy us if we've shrunk ourselves to oblivion
    if image_xscale &lt;= 0.4 {
        audio_play_sound(aPoof, 1, false)
        
        for (i = 0; i &lt; 10; i++) {
            NewSplat = instance_create(x + random(40) - 20, y + random(40) - 20, oSplat)
            NewSplat.image_blend = MyColor
            NewSplat.image_xscale = random(1) + .25
            NewSplat.image_yscale = NewSplat.image_xscale
            NewSplat.direction = random(360);
            NewSplat.speed = random(speed * 1.5)
            NewSplat.image_angle = random(360)
        }
        
        //change bullet color  
        oPlayer.BulletColor = MyColor    
        
        //Destroy Shadow Obj
        if (instance_exists(MyShadow)) {
            with(MyShadow) {
                instance_destroy()
            }
        }
        
        //Destroy Marker Obj
        with(MyMarker) {
            instance_destroy()
        }
        
        //track score
        oGame.score ++;  
        
        //byee
        instance_destroy()
    }
}


/* Marker */

if instance_exists(MyMarker) {
    
    //default to off-screen to hide
    MyMarker.x = -1000
    MyMarker.y = -1000
    MyMarker.image_blend = MyColor

    //if I'm offscreen...
    if x &lt; view_xview or x &gt; view_xview + view_wview or y &lt; view_yview or y &gt; view_yview + view_hview {

        if x &lt; view_xview {
            MyMarker.x = view_xview + MarkerEdge
        } else if x &gt; view_xview + view_wview {
            MyMarker.x = view_xview + view_wview - MarkerEdge
        } else {
            MyMarker.x = x
        }
        
        if y &lt; view_yview {
            MyMarker.y = view_yview + MarkerEdge
        } else if y &gt; view_yview + view_hview {
            MyMarker.y = view_yview + view_hview - MarkerEdge
        } else {
            MyMarker.y = y
        }     
        
        Dist = distance_to_point(MyMarker.x, MyMarker.y)           
        
        if Dist &gt;= 30 {
            if Dist &lt; 486  {
                Size = (600 - Dist) / 570
            } else {
                Size = 0.2
            }
            
            MyMarker.image_xscale = Size
            MyMarker.image_yscale = Size
                
        } else {
            //too close - hide marker
            MyMarker.x = -1000
            MyMarker.y = -1000        
        }
    } 
}

if (image_xscale &gt; 3.6 &amp;&amp; random(1000) &lt; 6) {
    SplitIntoTwo();
}

